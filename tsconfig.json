{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "types": ["jest", "node"],
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["test/*"]
    },
    "lib": ["es2018", "esnext.asynciterable"],
    "esModuleInterop": true
  },
  "include": ["./src/**/*"],
  "exclude": ["src/__tests__", "src/routes/__tests__"]
}
